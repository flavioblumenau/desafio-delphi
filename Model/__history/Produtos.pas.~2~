unit Produtos;

interface

uses
  SysUtils;

type
  TProdutos = class
  private
    FId: Integer;
    FIdCidade: Integer;
    FDescricao: string;
    FCPF: string;
    FTelefone: string;
    FCidade: string;
    FEstado: string;
    procedure SetDescricao(const Value: string);
    procedure SetCPF(const Value: string);
  public
    property Id: Integer read FId write FId;
    property IdCidade: Integer read FIdCidade write FIdCidade;
    property Descricao: string read FDescricao write SetDescricao;
    property CPF: string read FCPF write SetCPF;
    property Telefone: string read FTelefone write FTelefone;
    property Cidade: string read FCidade write FCidade;
    property Estado: string read FEstado write FEstado;
  end;

implementation

uses Math;

{ TClientes }

//PRODUTO_DESCRICAO
procedure TProdutos.SetDescricao(const Value: string);
begin
  if Value = EmptyStr then
    raise EInvalidArgument.Create('A "Descrição" precisa ser preenchido!')
  else
    FDescricao := Value;
end;

procedure TProdutos.SetCPF(const Value: string);
begin
  if Value = EmptyStr then
    raise EInvalidArgument.Create('O "CPF" precisa ser preenchido!')
  else
    FCPF := Value;
end;

end.
